@model IEnumerable<mvcproject.Models.客戶資料>

    @{
    ViewBag.Title = "Index";
    }

    @section breadcrumb {
    <li><a href="@Url.Action("Index")">客戶資料</a></li>
    }

    <h2>@Html.ActionLink("客戶資料管理", "Index") | @Html.ActionLink("匯出", "ExportCustomers")</h2>

    <p>
        @Html.ActionLink("建立客戶資料", "Create") | @Html.ActionLink("批次更新", "BatchIndex")
    </p>

    <form action="">
        <p>
            <input type="search" name="search" value="" />
            @Html.DropDownList("classification", "-- 客戶分類 --")
            <input type="submit" value="查詢客戶" />
        </p>
    </form>


                      <table class="table">
                          <tr>
                              <th>
                                  @Html.DisplayNameFor(model => model.客戶名稱)
                                  @Html.ActionLink("<<", "Index", new { sortItem = 0, order = "up"}) | 
                                  @Html.ActionLink(">>", "Index", new { sortItem = 0, order = "down"})
                              </th>
                              <th>
                                  @Html.DisplayNameFor(model => model.統一編號)
                                  @Html.ActionLink("<<", "Index", new { sortItem = 1, order = "up"}) |
                                  @Html.ActionLink(">>", "Index", new { sortItem = 1, order = "down"})
                              </th>
                              <th>
                                  @Html.DisplayNameFor(model => model.電話)
                                  @Html.ActionLink("<<", "Index", new { sortItem = 2, order = "up"}) |
                                  @Html.ActionLink(">>", "Index", new { sortItem = 2, order = "down"})
                              </th>
                              <th>
                                  @Html.DisplayNameFor(model => model.傳真)
                                  @Html.ActionLink("<<", "Index", new { sortItem = 3, order = "up"}) |
                                  @Html.ActionLink(">>", "Index", new { sortItem = 3, order = "down"})
                              </th>
                              <th>
                                  @Html.DisplayNameFor(model => model.地址)
                                  @Html.ActionLink("<<", "Index", new { sortItem = 4, order = "up"}) |
                                  @Html.ActionLink(">>", "Index", new { sortItem = 4, order = "down"})
                              </th>
                              <th>
                                  @Html.DisplayNameFor(model => model.Email)
                                  @Html.ActionLink("<<", "Index", new { sortItem = 5, order = "up"}) |
                                  @Html.ActionLink(">>", "Index", new { sortItem = 5, order = "down"})
                              </th>
                              <th></th>
                          </tr>

                          @if (Model != null) {
                          foreach (var item in Model) {
                          <tr>
                              <td>
                                  @Html.ActionLink(item.客戶名稱 , "Details", new { id=item.Id })
                              </td>
                              <td>
                                  @Html.DisplayFor(modelItem => item.統一編號)
                              </td>
                              <td>
                                  @Html.DisplayFor(modelItem => item.電話)
                              </td>
                              <td>
                                  @Html.DisplayFor(modelItem => item.傳真)
                              </td>
                              <td>
                                  @Html.DisplayFor(modelItem => item.地址)
                              </td>
                              <td>
                                  @Html.DisplayFor(modelItem => item.Email)
                              </td>
                              <td>
                                  @Html.ActionLink("修改", "Edit", new { id=item.Id }) |
                                  @Html.ActionLink("刪除", "Delete", new { id=item.Id })
                              </td>
                          </tr>
                          }

                          } else {
                          <script>alert("@ViewBag.Message");</script>
                          }
                      </table>
